<button
  type="button"
  (click)="onToggle()"
  class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-itgi-blue focus:outline-none"
  aria-label="Toggle password visibility"
>
  <img
    *ngIf="!visible"
    src="/svg/eye.svg"
    alt="Eye"
    class="h-5 w-5 cursor-pointer hover:opacity-80 transition-opacity duration-150"
  />
  <img
    *ngIf="visible"
    src="/svg/eye-off.svg"
    alt="Eye Off"
    class="h-5 w-5 cursor-pointer hover:opacity-80 transition-opacity duration-150"
  />
</button>
